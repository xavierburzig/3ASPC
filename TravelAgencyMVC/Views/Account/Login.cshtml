@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@model TravelAgencyMVC.Models.Account.LoginViewModel
    <div class="row">
        <h1>Login</h1>
    </div>
    <div class="row">

        <form method="post" role="form" asp-action="Login" class="form-horizontal">
            <div asp-validation-summary="All"></div>
            <div class="form-group">
                <label asp-for="EmailAddress" class="col-sm-2 control-label"></label>
                <div class="col-sm-10">
                    <input asp-for="EmailAddress" class="form-control" placeholder="Email" />
                    <span asp-validation-for="EmailAddress" class="text-danger" />
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="col-sm-2 control-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Password" class="form-control" placeholder="Password" />
                    <span asp-validation-for="Password" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="col-sm-2 control-label"></label>
                <div class="col-sm-10">
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="ConfirmPassword" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">Login</button>
                </div>
            </div>
        </form>
        <form method="post" action="@Url.Action("Register","Account")">
            <div class="input-group">
                <span>Not Registered ?</span>
                <button type="submit" class="btn btn-link">Register</button>
            </div>
        </form>
    </div>

