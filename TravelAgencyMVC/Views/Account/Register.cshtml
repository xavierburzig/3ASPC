@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@model TravelAgencyMVC.Models.Account.RegisterViewModel

<div class="row">
    <h1>Register</h1>
</div>
<div class="row">
    <form role="form" asp-action="Register">
        <div asp-validation-summary="All"></div>
        <div class="form-group">
            <label asp-for="EmailAddress" class="col-sm-2 control-label"></label>
            <div class="col-sm-10">
                <input asp-for="EmailAddress" class="form-control" placeholder="Email" />
                <span asp-validation-for="EmailAddress" class="text-danger" />
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Password" class="col-sm-2 control-label"></label>
            <div class="col-sm-10">
                <input asp-for="Password" class="form-control" placeholder="Password" />
                <span asp-validation-for="Password" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword" class="col-sm-2 control-label"></label>
            <div class="col-sm-10">
                <input asp-for="ConfirmPassword" class="form-control" placeholder="ConfirmPassword" />
                <span asp-validation-for="ConfirmPassword" class="text-danger" />
            </div>
        </div>
        @* TODO: got to redirect properly *@
        <form method="post" action="@Url.Action("Login","Account")">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Register</button>
            </div>
        </form>

    </form>
</div>